{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "msbuild",
            "type": "process",
            "args": [
                "${workspaceFolder}/WAPPAssignment.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "msbuild",
            "type": "process",
            "args": [
                "${workspaceFolder}/WAPPAssignment.sln",
                "/target:Clean",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-iis-express",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/WAPPAssignment.csproj",
                "/p:DeployOnBuild=true",
                "/p:PublishProfile=FolderProfile"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}